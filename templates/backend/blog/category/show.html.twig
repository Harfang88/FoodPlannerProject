{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
    <h2 class="text-center mt-4">{{category.name}}</h2>
    <div class="container bg-light">
         <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre de l'article</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <th scope="row">{{article.id}}</th>
                        <td>{{article.title}}</td>
                        <td>
                            <a href="{{path('backend_blog_article_edit', {'id' : article.id })}}" class="btn btn-outline-dark btn-sm">Modifier</a>
                            <a href="{{path('backend_blog_article_delete', {'id' : article.id })}}" class="btn btn-outline-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {# Back #}
        <div class="mt-2 backLink">
            <a href="{{path('backend_blog_article_index')}}" class="btn btn-dark">Retour</a>
        </div>
    </div>
{% endblock %}